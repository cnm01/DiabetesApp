<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.diabetesapp">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/icon2"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.Launcher"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".MonthViewActivity"
                android:exported="true"
                android:label="@string/archive"
                android:theme="@style/AppTheme.Launcher.NoActionBar">
        </activity>
        <activity
                android:name=".WeekViewActivity"
                android:exported="true"
                android:label="@string/archive"
                android:theme="@style/AppTheme.Launcher.NoActionBar">
        </activity>
        <activity
                android:name=".DayViewActivity"
                android:exported="true"
                android:label="@string/archive"
                android:theme="@style/AppTheme.Launcher.NoActionBar">
        </activity>
        <activity
                android:name=".Reauthenticate"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".NewMeasurementActivity"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".DeleteAccountActivity"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".ChangeDetailsActivity"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".AccountActivity"
                android:label="@string/account"
                android:launchMode="singleTask">
        </activity>
        <activity
                android:name=".HomeActivity"
                android:label="@string/title_activity_home"
                android:launchMode="singleTask">
        </activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".RegisterActivity"
                android:exported="true"
                android:label="Register"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
                android:name=".LoginActivity"
                android:exported="true"
                android:label="@string/title_activity_login"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
                android:name=".MainActivity"
                android:theme="@style/TitleBar">
        </activity>
    </application>

</manifest>