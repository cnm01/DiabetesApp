<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".ChangeDetailsActivity">


        <TextView android:id="@+id/title"
                  android:text="@string/update_details"
                  android:textSize="24sp"
                  android:gravity="center_horizontal"
                  android:textColor="@color/white" android:layout_width="wrap_content"
                  android:layout_marginTop="72dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                  android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginRight="8dp"
                  android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="207dp"
                app:layout_constraintStart_toStartOf="@+id/title" app:layout_constraintEnd_toEndOf="@+id/title"
                android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/title"
                android:id="@+id/linearLayout2">

            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:autofillHints="firstname"
                    app:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint="@string/hint_first_name"
                    android:id="@+id/first_name_input"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white" tools:layout_editor_absoluteY="228dp"
                    tools:layout_editor_absoluteX="16dp"/>
            <android.support.v7.widget.AppCompatEditText
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:autofillHints="lastname"
                    app:backgroundTint="@color/white"
                    android:ems="10"
                    android:hint="@string/hint_last_name"
                    android:id="@+id/last_name_input"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white" tools:layout_editor_absoluteY="274dp"
                    tools:layout_editor_absoluteX="16dp"/>
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/email_input"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress|textCapWords"
                    android:ems="10"
                    android:hint="@string/prompt_email"
                    app:backgroundTint="@color/white"
                    android:autofillHints="email"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white" tools:layout_editor_absoluteY="307dp"
                    tools:layout_editor_absoluteX="16dp"/>
            <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/password_input"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="@string/new_password"
                    app:backgroundTint="@color/white"
                    android:autofillHints="password"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white" tools:layout_editor_absoluteY="353dp"
                    tools:layout_editor_absoluteX="42dp"/>

        </LinearLayout>
        <Button
                android:id="@+id/update_button"
                android:background="@drawable/login_button"
                android:text="@string/update" android:textColor="@color/white" android:layout_height="wrap_content"
                android:layout_width="214dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAllCaps="false"
                android:layout_marginBottom="36dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.793">

        </Button>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="296dp" tools:layout_editor_absoluteX="156dp"
                android:id="@+id/progress_bar"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>