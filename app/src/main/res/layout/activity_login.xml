<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            tools:context=".LoginActivity">

        <ImageView
                android:id="@+id/logo"
                android:layout_width="214dp"
                android:layout_height="169dp"
                app:srcCompat="@drawable/logo"
                android:contentDescription="@string/logo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="120dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="120dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="76dp"/>

        <android.support.v7.widget.AppCompatEditText
                android:id="@+id/email_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress|textCapWords"
                android:ems="10"
                android:hint="@string/prompt_email"
                android:autofillHints="email"
                android:textColor="@color/textDark"
                android:background="@drawable/login_item" android:padding="10dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/logo"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/register_button"
                app:layout_constraintVertical_bias="0.166"/>

        <android.support.v7.widget.AppCompatEditText
                android:id="@+id/password_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="@string/prompt_password"
                android:autofillHints="password"
                android:textColor="@color/textDark"
                app:layout_constraintTop_toBottomOf="@+id/email_input"
                app:layout_constraintStart_toStartOf="@+id/email_input"
                app:layout_constraintEnd_toEndOf="@+id/email_input" app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/login_item" android:padding="10dp" android:layout_marginTop="12dp"/>

        <Button
                android:text="@string/action_sign_in"
                android:layout_width="0dp"
                android:layout_height="71dp"
                android:id="@+id/login_button"
                android:background="@drawable/login_button"
                android:textAllCaps="false"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/white"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/register_button"
                app:layout_constraintEnd_toEndOf="@+id/register_button"/>
        <Button
                android:text="@string/action_register"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:id="@+id/register_button"
                android:textAllCaps="false"
                android:stateListAnimator="@null"
                android:textStyle="normal"
                android:background="@drawable/register_button"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/login_button"
                app:layout_constraintStart_toStartOf="@+id/password_input"
                app:layout_constraintEnd_toEndOf="@+id/password_input" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="@string/action_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:id="@+id/forgot_password_text"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/password_input"
                app:layout_constraintEnd_toEndOf="@+id/password_input" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/password_input" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/register_button"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="45dp"
                android:layout_height="49dp"
                android:id="@+id/progress_bar" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:visibility="invisible"
                android:layout_marginStart="8dp"/>

    </android.support.constraint.ConstraintLayout>
</ScrollView>